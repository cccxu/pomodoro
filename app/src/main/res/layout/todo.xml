<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/todo_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <com.yalantis.beamazingtoday.ui.widget.BatRecyclerView
        android:id="@+id/todo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:list_background="@color/decent"
        app:add_button_color="@color/holo_blue_dark"
        app:hint_color="@color/holo_darker_gray"
        app:plus_color="@color/holo_blue_dark"
        app:hint="@string/str_add_goal"
        app:radio_button_res="@drawable/selector_radio_button">
    </com.yalantis.beamazingtoday.ui.widget.BatRecyclerView>
</LinearLayout>
